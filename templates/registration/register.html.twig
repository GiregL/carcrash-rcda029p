{% extends 'base.html.twig' %}

{% block title %}CarCrash - S'enregistrer{% endblock %}

{% block body %}
    <h1>CarCrash - S'enregistrer</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.user.email, {
            label: 'Adresse e-mail'
        }) }}
        {{ form_row(registrationForm.user.plainPassword, {
            label: 'Mot de passe'
        }) }}

        {{ form_row(registrationForm.profil.nom) }}
        {{ form_row(registrationForm.profil.prenom) }}
        {{ form_row(registrationForm.profil.adresse) }}
        {{ form_row(registrationForm.profil.telephone) }}
        {{ form_row(registrationForm.profil.dateNaissance) }}

        {{ form_row(registrationForm.user.agreeTerms) }}
        <button type="submit" class="btn btn-primary">S'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
